<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nz.co.vilemob.daggerviewmodel.example.pop.PopFragment">

    <TextView
        android:id="@+id/scopedNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:text="@string/scoped_number" />

    <TextView
        android:id="@+id/unscopedNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:text="@string/unscoped_number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:text="@string/press_back_to_pop" />

</LinearLayout>
